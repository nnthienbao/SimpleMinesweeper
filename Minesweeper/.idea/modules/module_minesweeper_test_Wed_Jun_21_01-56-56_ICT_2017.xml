<?xml version="1.0" encoding="UTF-8"?>
<project name="module_minesweeper_test" default="compile.module.minesweeper_test">
  <dirname property="module.minesweeper_test.basedir" file="${ant.file.module_minesweeper_test}"/>
  
  <property name="module.jdk.home.minesweeper_test" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.minesweeper_test" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.minesweeper_test" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.minesweeper_test" value="-encoding UTF-8 -source 8 -target 1.8 ${compiler.args}"/>
  
  <property name="minesweeper_test.output.dir" value="undefined"/>
  <property name="minesweeper_test.testoutput.dir" value="${module.minesweeper_test.basedir}/../../build/classes/test"/>
  
  <path id="minesweeper_test.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="minesweeper_test.module.production.classpath">
    <path refid="${module.jdk.classpath.minesweeper_test}"/>
    <pathelement location="${minesweeper_main.output.dir}"/>
    <path refid="library.gradle:_junit:junit:4.12.classpath"/>
    <path refid="library.gradle:_org.hamcrest:hamcrest-core:1.3.classpath"/>
  </path>
  
  <path id="minesweeper_test.runtime.production.module.classpath">
    <path refid="minesweeper_main.runtime.production.module.classpath"/>
    <path refid="library.gradle:_junit:junit:4.12.classpath"/>
    <path refid="library.gradle:_org.hamcrest:hamcrest-core:1.3.classpath"/>
  </path>
  
  <path id="minesweeper_test.module.classpath">
    <path refid="${module.jdk.classpath.minesweeper_test}"/>
    <pathelement location="${minesweeper_main.output.dir}"/>
    <path refid="library.gradle:_junit:junit:4.12.classpath"/>
    <path refid="library.gradle:_org.hamcrest:hamcrest-core:1.3.classpath"/>
  </path>
  
  <path id="minesweeper_test.runtime.module.classpath">
    <pathelement location="${minesweeper_test.testoutput.dir}"/>
    <path refid="minesweeper_main.runtime.module.classpath"/>
    <path refid="library.gradle:_junit:junit:4.12.classpath"/>
    <path refid="library.gradle:_org.hamcrest:hamcrest-core:1.3.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.minesweeper_test">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.minesweeper_test">
    <patternset refid="excluded.from.module.minesweeper_test"/>
  </patternset>
  
  <path id="minesweeper_test.module.test.sourcepath">
    <dirset dir="${module.minesweeper_test.basedir}/../../src/test">
      <include name="java"/>
      <include name="resources"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.minesweeper_test" depends="compile.module.minesweeper_test.production,compile.module.minesweeper_test.tests" description="Compile module Minesweeper_test"/>
  
  <target name="compile.module.minesweeper_test.production" depends="register.custom.compilers,compile.module.minesweeper_main" description="Compile module Minesweeper_test; production classes"/>
  
  <target name="compile.module.minesweeper_test.tests" depends="register.custom.compilers,compile.module.minesweeper_test.production" description="compile module Minesweeper_test; test classes" unless="skip.tests">
    <mkdir dir="${minesweeper_test.testoutput.dir}"/>
    <javac2 destdir="${minesweeper_test.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.minesweeper_test}/javac">
      <compilerarg line="${compiler.args.minesweeper_test}"/>
      <bootclasspath refid="minesweeper_test.module.bootclasspath"/>
      <classpath refid="minesweeper_test.module.classpath"/>
      <src refid="minesweeper_test.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.minesweeper_test"/>
    </javac2>
    
    <copy todir="${minesweeper_test.testoutput.dir}">
      <fileset dir="${module.minesweeper_test.basedir}/../../src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.minesweeper_test.basedir}/../../src/test/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.minesweeper_test" description="cleanup module">
    <delete dir="${minesweeper_test.output.dir}"/>
    <delete dir="${minesweeper_test.testoutput.dir}"/>
  </target>
</project>