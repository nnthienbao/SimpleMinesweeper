<?xml version="1.0" encoding="UTF-8"?>
<project name="module_minesweeper_main" default="compile.module.minesweeper_main">
  <dirname property="module.minesweeper_main.basedir" file="${ant.file.module_minesweeper_main}"/>
  
  <property name="module.jdk.home.minesweeper_main" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.minesweeper_main" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.minesweeper_main" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.minesweeper_main" value="-encoding UTF-8 -source 8 -target 1.8 ${compiler.args}"/>
  
  <property name="minesweeper_main.output.dir" value="${module.minesweeper_main.basedir}/../../build/classes/main"/>
  <property name="minesweeper_main.testoutput.dir" value="${module.minesweeper_main.basedir}/../../build/classes/main"/>
  
  <path id="minesweeper_main.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="minesweeper_main.module.production.classpath">
    <path refid="${module.jdk.classpath.minesweeper_main}"/>
  </path>
  
  <path id="minesweeper_main.runtime.production.module.classpath">
    <pathelement location="${minesweeper_main.output.dir}"/>
  </path>
  
  <path id="minesweeper_main.module.classpath">
    <path refid="${module.jdk.classpath.minesweeper_main}"/>
    <pathelement location="${minesweeper_main.output.dir}"/>
  </path>
  
  <path id="minesweeper_main.runtime.module.classpath">
    <pathelement location="${minesweeper_main.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.minesweeper_main">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.minesweeper_main">
    <patternset refid="excluded.from.module.minesweeper_main"/>
  </patternset>
  
  <path id="minesweeper_main.module.sourcepath">
    <dirset dir="${module.minesweeper_main.basedir}/../../src/main">
      <include name="java"/>
      <include name="resources"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.minesweeper_main" depends="compile.module.minesweeper_main.production,compile.module.minesweeper_main.tests" description="Compile module Minesweeper_main"/>
  
  <target name="compile.module.minesweeper_main.production" depends="register.custom.compilers" description="Compile module Minesweeper_main; production classes">
    <mkdir dir="${minesweeper_main.output.dir}"/>
    <javac2 destdir="${minesweeper_main.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.minesweeper_main}/javac">
      <compilerarg line="${compiler.args.minesweeper_main}"/>
      <bootclasspath refid="minesweeper_main.module.bootclasspath"/>
      <classpath refid="minesweeper_main.module.production.classpath"/>
      <src refid="minesweeper_main.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.minesweeper_main"/>
    </javac2>
    
    <copy todir="${minesweeper_main.output.dir}">
      <fileset dir="${module.minesweeper_main.basedir}/../../src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.minesweeper_main.basedir}/../../src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.minesweeper_main.tests" depends="register.custom.compilers,compile.module.minesweeper_main.production" description="compile module Minesweeper_main; test classes" unless="skip.tests"/>
  
  <target name="clean.module.minesweeper_main" description="cleanup module">
    <delete dir="${minesweeper_main.output.dir}"/>
    <delete dir="${minesweeper_main.testoutput.dir}"/>
  </target>
</project>